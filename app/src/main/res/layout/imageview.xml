<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_height="match_parent">

    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/mailImages"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="160sp" />


            <androidx.cardview.widget.CardView
                android:layout_marginRight="10sp"
                app:cardCornerRadius="6sp"
                android:layout_marginLeft="10sp"
                app:cardBackgroundColor="@color/colorPrimary"
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="45sp">


                <TextView
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/read"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="Read data"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </TextView>

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout

                        android:layout_marginEnd="10sp"
                        android:layout_marginStart="10sp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:textColor="@color/greys"
                            android:textSize="16sp"
                            android:padding="3dp"
                            android:text="Epic Id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginTop="6sp"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:padding="3dp"
                            android:gravity="start|center"
                            android:id="@+id/userId"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_width="match_parent"
                            android:layout_height="40sp" />

                    </LinearLayout>

                    <LinearLayout

                        android:layout_marginEnd="10sp"
                        android:layout_marginStart="10sp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:textColor="@color/greys"
                            android:textSize="16sp"
                            android:padding="3dp"
                            android:text="Name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:layout_marginTop="6sp"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:padding="3dp"
                            android:gravity="start|center"
                            android:id="@+id/names"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_width="match_parent"
                            android:layout_height="40sp" />

                    </LinearLayout>
                    <LinearLayout

                        android:layout_marginEnd="10sp"
                        android:layout_marginStart="10sp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:textColor="@color/greys"
                            android:textSize="16sp"
                            android:padding="3dp"
                            android:id="@+id/nameTexts"
                            android:text="Father/guardian "
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:layout_marginTop="6sp"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:padding="3dp"
                            android:gravity="start|center"
                            android:id="@+id/father_name"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_width="match_parent"
                            android:layout_height="40sp" />

                    </LinearLayout>
                    <LinearLayout

                        android:layout_marginEnd="10sp"
                        android:layout_marginStart="10sp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:textColor="@color/greys"
                            android:textSize="16sp"
                            android:padding="3dp"
                            android:text="Age"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:layout_marginTop="6sp"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:padding="3dp"
                            android:gravity="start|center"
                            android:id="@+id/age"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_width="match_parent"
                            android:layout_height="40sp" />

                    </LinearLayout>
                    <LinearLayout

                        android:layout_marginEnd="10sp"
                        android:layout_marginStart="10sp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:textColor="@color/greys"
                            android:textSize="16sp"
                            android:padding="3dp"
                            android:text="Gendre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:layout_marginTop="6sp"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:padding="3dp"
                            android:gravity="start|center"
                            android:id="@+id/gendre"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_width="match_parent"
                            android:layout_height="40sp" />

                    </LinearLayout>
                    <LinearLayout

                        android:layout_marginEnd="10sp"
                        android:layout_marginStart="10sp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:textColor="@color/greys"
                            android:textSize="16sp"
                            android:padding="3dp"
                            android:text="Guardian type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:layout_marginTop="6sp"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:padding="3dp"
                            android:gravity="start|center"
                            android:id="@+id/gaurdian_type"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_width="match_parent"
                            android:layout_height="40sp" />

                    </LinearLayout>




                    <LinearLayout

                        android:layout_marginEnd="10sp"
                        android:layout_marginStart="10sp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:textColor="@color/greys"
                            android:textSize="16sp"
                            android:padding="3dp"
                            android:text="Canvass Type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginTop="6sp"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:padding="3dp"
                            android:gravity="start|center"
                            android:id="@+id/canvas_type"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_width="match_parent"
                            android:layout_height="40sp" />


                        <View
                            android:background="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="1sp"/>

                    </LinearLayout>
                    <LinearLayout

                        android:layout_marginEnd="10sp"
                        android:layout_marginStart="10sp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:textColor="@color/greys"
                            android:textSize="16sp"
                            android:padding="3dp"
                            android:text="Party affiliation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginTop="6sp"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:padding="3dp"
                            android:gravity="start|center"
                            android:id="@+id/party_aff"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_width="match_parent"
                            android:layout_height="40sp" />
                        <View
                            android:background="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="1sp"/>
                    </LinearLayout>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/upload"
                        android:layout_gravity="end"
                        android:visibility="visible"
                        android:layout_width="130dp"
                        android:layout_height="40sp"
                        android:layout_centerInParent="true"
                        app:cardBackgroundColor="@color/colorPrimaryDark"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="10sp"
                        app:cardCornerRadius="2dp"
                        app:backgroundTint="@color/colorPrimaryDark"
                        android:src="@drawable/ic_file_upload_white_24dp">

                        <TextView

                            android:layout_width="match_parent"
                            android:text="Upload"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:layout_height="match_parent" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>


            </RelativeLayout>
        </LinearLayout>



    </ScrollView>


</RelativeLayout>